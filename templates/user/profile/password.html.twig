{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h1>Changer votre mot de passe</h1>

    <turbo-frame id="modal_content">
        <div class="block md:flex md:flex-col md:gap-4">
            <h2 class="mb-4">Changer votre mot de passe</h2>
            {{ form_start(form, {action: path('profile.password')}) }}
            <div class="flex-1 ">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
                {{ form_help(form.password) }}
            </div>

            <div class="flex flex-row gap-4">
                <div class="flex-1">
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                    {{ form_help(form.plainPassword.first) }}
                </div>
                <div class="flex-1">
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second) }}
                    {{ form_help(form.plainPassword.second) }}
                </div>
            </div>

            <div class="flex flex-row gap-4">
                <div class="flex-1">
                    {{ form_widget(form.submit) }}
                </div>
                <div class="flex-1">
                    <button type="button" data-action="modal#close" class="btn btn-secondary">Annuler</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </turbo-frame>
{% endblock %}


