{% extends 'base.html.twig' %}

{% block body %}
    <div class="md:container md:mx-auto md:px-4 md:py-8">
        <h1 class="text-3xl font-bold mb-6">Mon panier</h1>

        <div class="max-w-7xl mx-auto">
            {% if cart is empty %}
            <div class="text-center py-8">
                <p class="text-gray-500 mb-4">Votre panier est vide.</p>
            </div>
            {% else %}
                <div class="flex flex-col-reverse md:flex-row gap-2 md:gap-8">
                    {% include 'cart/_cart_list.html.twig' with {
                        'cart': cart,
                        'totals': totals
                    } %}

                    {% include 'cart/_cart_recap.html.twig' %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
