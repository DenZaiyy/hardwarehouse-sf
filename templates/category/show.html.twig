{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - HardWareHouse{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Thumbnail</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td><a href="{{ path('product.show', {slug: product.slug}) }}">{{ product.id }}</a></td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.slug }}</td>
                    <td><img src="{{ product.thumbnail }}" alt="{{ product.name }} preview" class="size-16" /></td>
                    <td>{{ product.price|currency }}</td>
                    <td><a href="{{ path('brand.show', {slug: product.brand.slug}) }}">{{ product.brand.name }}</a></td>
                    <td>{{ product.stock.quantity }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include '_partials/_pagination.html.twig' with {pagination: pagination} %}
{% endblock %}
