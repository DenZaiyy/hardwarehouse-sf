{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - HardWareHouse{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Image</th>
                <th>Price</th>
                <th>Brand</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td><a href="{{ path('product.show', {slug: product.slug}) }}">{{ product.id }}</a></td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.slug }}</td>
                    <td>{{ product.image }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.brand.name }}</td>
                    <td>{{ product.stock.quantity }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
