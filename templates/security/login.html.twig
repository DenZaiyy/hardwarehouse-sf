{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans(domain = "title") }} - HardWareHouse{% endblock %}

{% block meta_description %}Connectez vous sur HardWareHouse pour pouvoir valider votre panier !{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="mb-3">
            {{ 'user.login.logged.message'|trans(arguments = { '%user%': app.user.userIdentifier }) }}, <a href="{{ logout_path() }}">{{ 'user.login.logged.logout.label'|trans }}</a>
        </div>
    {% endif %}

    <form method="post" class="mx-auto flex flex-col p-4 gap-4 rounded border md:max-w-7xl">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>{{ 'user.login.title'|trans }}</h1>
        <div>
            <label for="username">{{ 'user.login.email.label'|trans }}</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div>
            <label for="password">{{ 'user.login.password.label'|trans }}</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
        #}
        <div class="flex gap-2 items-center flex-1">
            <input type="checkbox" name="_remember_me" id="_remember_me" class="size-5">
            <label class="mb-0" for="_remember_me">{{ 'user.login.remember.label'|trans }}</label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'user.login.submit.label'|trans }}
        </button>
    </form>
{% endblock %}
