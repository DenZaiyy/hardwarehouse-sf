<a href="{{ path('product.show', {slug: product.slug}) }}" class="group md:hover:scale-105 flex flex-col py-2 px-4 relative bg-paragraph overflow-hidden rounded-md md:max-w-75 w-full transition-all duuration-200 drop-shadow-md cursor-pointer">
    <div id="product-like-{{ product.id }}" class="absolute top-2 right-2 z-50">
        {{ ux_icon('heroicons-solid:heart', {class: 'size-7 text-secondary hover:text-red-500 hover:scale-110 hover:animate-wiggle cursor-pointer duration-200 transition-all ease-in-out drop-shadow-sm'}) }}
    </div>

    <div class="duration-200 transition-all ease-in-out relative overflow-hidden w-full size-70">
        <img src="{{ product.thumbnail }}" alt="{{ product.name }} preview" class="object-cover object-center w-full" />
    </div>

    <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-2.5 items-center text-center">
            <h2>{{ product.name }}</h2>
            <p class="truncate">{{ product.shortDescription }}</p>
        </div>
    </div>

</a>
