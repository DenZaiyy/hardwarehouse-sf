<div{{ attributes }}>
    <div class="space-y-4 text-sm">
        {% for item in items %}
            <div class="flex justify-between items-center gap-2">
                <div>
                    <p class="font-medium">{{ item.name }}</p>
                    <p class="text-xs text-muted">
                        {{ item.price_ht }} € HT
                    </p>
                </div>

                <div class="flex items-center gap-2">
                    <button
                        class="px-2 py-1 border rounded"
                        data-action="live#action"
                        data-live-action-param="decrease"
                        data-live-id-param="{{ item.id }}"
                    >−</button>

                    <span>{{ item.quantity }}</span>

                    <button
                        class="px-2 py-1 border rounded"
                        data-action="live#action"
                        data-live-action-param="increase"
                        data-live-id-param="{{ item.id }}"
                    >+</button>

                    <button
                        class="text-red-500 text-xs"
                        data-action="live#action"
                        data-live-action-param="remove"
                        data-live-id-param="{{ item.id }}"
                    >
                        Supprimer
                    </button>
                </div>
            </div>

            <div class="border-t pt-3 space-y-1">
                <div class="flex justify-between">
                    <span>Sous-total HT</span>
                    <span>{{ totals.subtotal }} €</span>
                </div>

                <div class="flex justify-between">
                    <span>TVA ({{ totals.vat_rate * 100 }}%)</span>
                    <span>{{ totals.vat_amount }} €</span>
                </div>

                <div class="flex justify-between font-semibold">
                    <span>Total TTC</span>
                    <span>{{ totals.total }} €</span>
                </div>
            </div>

            <a
                {#            href="{{ path('checkout') }}"#}
                class="block text-center bg-primary text-white py-2 rounded mt-4"
            >
                Passer au paiement
            </a>
        {% else %}
            <p class="text-muted">Panier vide</p>
        {% endfor %}
    </div>

</div>
