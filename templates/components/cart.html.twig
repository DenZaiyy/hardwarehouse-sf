<div{{ attributes }}>
    <div class="space-y-4 text-sm">
        {% for item in items %}
            <div class="flex justify-between items-center gap-2">
                <div>
                    <p class="font-medium">{{ item.name }}</p>
                    <p class="text-xs text-muted">
                        {{ item.price_ht|format_currency('EUR') }} HT
                    </p>
                </div>

                <div class="flex items-center gap-2">
                    <button
                        class="px-2 py-1 border rounded"
                        data-action="live#action"
                        data-live-action-param="decrease"
                        data-live-id-param="{{ item.id }}"
                    >âˆ’</button>

                    <span>{{ item.quantity }}</span>

                    <button
                        class="px-2 py-1 border rounded"
                        data-action="live#action"
                        data-live-action-param="increase"
                        data-live-id-param="{{ item.id }}"
                    >+</button>

                    <button
                        class="text-red-500 text-xs"
                        data-action="live#action"
                        data-live-action-param="remove"
                        data-live-id-param="{{ item.id }}"
                    >
                        {{ 'header.cart.item.delete.label'|trans }}
                    </button>
                </div>
            </div>

            <div class="border-t pt-3 space-y-1">
                <div class="flex justify-between">
                    <span>{{ 'header.cart.subtotal.label'|trans }}</span>
                    <span>{{ totals.subtotal|format_currency('EUR') }}</span>
                </div>

                <div class="flex justify-between">
                    <span>{{ 'header.cart.vat.label'|trans }} ({{ totals.vat_rate * 100 }}%)</span>
                    <span>{{ totals.vat_amount|format_currency('EUR') }}</span>
                </div>

                <div class="flex justify-between font-semibold">
                    <span>{{ 'header.cart.totalttc.label'|trans }}</span>
                    <span>{{ totals.total|format_currency('EUR') }}</span>
                </div>
            </div>

            <a
                {#            href="{{ path('checkout') }}"#}
                class="block text-center bg-primary text-white py-2 rounded mt-4"
            >
                {{ 'header.cart.checkout.label'|trans }}
            </a>
        {% else %}
            <p class="text-muted">{{ 'header.cart.empty.label'|trans }}</p>
        {% endfor %}
    </div>
</div>
